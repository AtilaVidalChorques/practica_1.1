# 1. Crear el archivo .env
touch .env

# 2. Añadir variables de entorno de ejemplo
echo "API_KEY=tu_clave_secreta_aqui" >> .env
echo "DB_USER=usuario_app" >> .env
echo "DB_PASS=contraseña_fuerte_123" >> .env

# 3. Mostrar el contenido del archivo (opcional)
cat .env

# 4. Asegurar que .env no se sube al repositorio Git
